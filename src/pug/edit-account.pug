extends root/layout
include mixins/breadcrumb

block container
    .container
        include include/header
        include include/search
        main.content
            section.personal
                .box
                    +breadcrumb(["Главная", "Личный кабинет"], "Редактировать информацию")
                    .personal__container
                        .personal__info
                            h1.caption Учетная запись
                            .form
                                .form__block
                                    label.form__label Имя:
                                    input.input(type="text")
                                .form__block
                                    label.form__label Фамилия:
                                    input.input(type="text")
                                .form__block
                                    label.form__label Email:
                                    input.input(type="text")
                                .form__block
                                    label.form__label Телефон:
                                    input.input(type="text")
                            .personal__manage
                                button.button.button__left #[i.icon_arrow-left] вернуться
                                button.button.button__right продолжить #[i.icon_arrow-right]

                        ul.side-menu
                            li.side-menu__item
                                a(href="#") личный кабинет
                            li.side-menu__item.active
                                a(href="#") учетная запись
                            li.side-menu__item
                                a(href="#") адреса доставки
                            li.side-menu__item
                                a(href="#") бонусная система
                            li.side-menu__item
                                a(href="#") изменить пароль
                            li.side-menu__item
                                a(href="#") выход

        include include/footer