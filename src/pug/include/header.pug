header.header
    .header__first-line
        .box
            button.hamb__top-menu.icon_hamb
            .nav-menu
                a.nav-menu__item(href="#") О нас
                a.nav-menu__item(href="#") Доставка
                a.nav-menu__item(href="#") Оплата
                a.nav-menu__item(href="#") Контакты
                a.nav-menu__item(href="#") Скидки
            ul.nav-menu__manage
                li.currency
                    div.nav-dropdown
                        button.nav-dropdown__button.currency-dropdown__button BYN #[i.currency-dropdown__angle.icon_1_ArrowDown]
                        ul.currency-dropdown__content.nav-dropdown__content
                            li.nav-dropdown__item BYN
                            li.nav-dropdown__item AMD
                li.lang
                    div.nav-dropdown
                        button.nav-dropdown__button.lang-dropdown__button
                            img.lang-dropdown__img(src="img/flag_ru.png" alt)
                        ul.nav-dropdown__content
                            li.nav-dropdown__item
                                img.lang-dropdown__img(src="img/flag_ru.png" alt)
                            li.nav-dropdown__item
                                img.lang-dropdown__img(src="img/flag_am.png" alt)
                li.account
                    div.nav-dropdown.acc-dropdown
                        a.nav-dropdown__button.acc-dropdown__button.icon_2_Lock(href="#") личный кабинет
                        ul.nav-dropdown__content.acc-dropdown__content
                            li.nav-dropdown__item.acc-dropdown__item
                                a(href="#" data-popup="registration") Регистрация
                            li.nav-dropdown__item.acc-dropdown__item
                                a(href="#" data-popup="login") Авторизация
                    .account__mob
                        button.account__button(data-popup="registration") Регистрация
                        span.divider |
                        button.account__button(data-popup="login") Вход

    .header__mobile-line
        .box
            a.header__logo(href="index.html")
                img(src="img/mobile-logo.png" alt="logo")
            .search-mob
                input.input__no-border(type="text" placeholder="Поиск по названию")
                button.button.icon_4_Search
    .header__second-line
        .box
            ul.second-line__list
                li.second-line__item
                    button.hamb__cat-menu.icon_hamb
                li.second-line__item
                    a.header__logo(href="/")
                        img(src="img/logo.png" alt="logo")
                    span.logo__desc Розничный онлайн-магазин #[br] орехов и сухофруктов
                li.second-line__item
                    a.mobile-header__button.icon_phone-call Контакты
                    .contacts__container
                        .contacts__info
                            a.contacts__number(href="tel:+375294175467") +375 (29) 417-54-67
                            span Ежедневно с 9.00 до 20.00
                        button.button(data-popup="call") Заказать звонок
                li.second-line__item
                    a.mobile-header__button.icon_shopping-cart(href="#") Корзина
                    .basket
                        i.icon_shopping-cart.basket__icon
                        .basket__info
                            span.basket__text 2&nbsp;
                            span товара:&nbsp;
                            span.basket__text 74.70 р.
                        .basket-list
                            ul
                                li.basket-list__item
                                    img(src="img/peanut-1.png")
                                    a.title(href="#") Арахис в белом шоколаде, 100 г.
                                    .quantity x2
                                    .price 8.00 р.
                                    button.basket__delete.icon_delete(title="Удалить")
                                li.basket-list__item
                                    img(src="img/peanut-1.png")
                                    a.title(href="#") Арахис в белом шоколаде, 100 г.
                                    .quantity x2
                                    .price 70.00 р.
                                    button.basket__delete.icon_delete(title="Удалить")
